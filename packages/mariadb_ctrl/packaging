set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

#compile
export GOROOT=$(readlink -nf /var/vcap/packages/golang)
export PATH=$GOROOT/bin:$PATH

export GOPATH=$PWD/mariadb_ctrl

go install mariadb_ctrl

cp mariadb_ctrl/bin/mariadb_ctrl $BOSH_INSTALL_TARGET/mariadb_ctrl-executable
cp mariadb_ctrl/src/mariadb_ctrl/mysql_upgrade.sh $BOSH_INSTALL_TARGET/mysql_upgrade.sh
cp mariadb_ctrl/src/mariadb_ctrl/execute_mysql_command.sh $BOSH_INSTALL_TARGET/execute_mysql_command.sh
