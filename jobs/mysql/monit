check process mariadb
  with pidfile /var/vcap/sys/run/mysql/mysql.pid
  start program "/var/vcap/jobs/mysql/bin/mariadb_ctl start" with timeout 300 seconds
  stop program "/var/vcap/jobs/mysql/bin/mariadb_ctl stop"
  group vcap

check process galera-healthcheck
  with pidfile /var/vcap/sys/run/galera-healthcheck/galera-healthcheck.pid
  start program "/var/vcap/jobs/mysql/bin/galera-healthcheck_ctl start" with timeout 60 seconds
  stop program "/var/vcap/jobs/mysql/bin/galera-healthcheck_ctl stop" with timeout 60 seconds
  group vcap

check process gra-log-purger-executable
  with pidfile /var/vcap/sys/run/gra-log-purger/gra-log-purger.pid
  start program "/var/vcap/jobs/mysql/bin/gra-log-purger_ctl start" with timeout 60 seconds
  stop program "/var/vcap/jobs/mysql/bin/gra-log-purger_ctl stop" with timeout 60 seconds
  group vcap
