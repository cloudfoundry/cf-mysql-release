# MySQL.  Versions 4.1 and 5.0 are recommended.
#
# Install the MYSQL driver
#   gem install mysql2
#
# Ensure the MySQL gem is defined in your Gemfile
#   gem 'mysql2'
#
# And be sure to use new-style password hashing:
#   http://dev.mysql.com/doc/refman/5.0/en/old-client.html

production:
  adapter: mysql2
  encoding: utf8
  database: test
  pool: 5
  host: <%= properties.mysql_node.host %>
  port: <%= properties.mysql_node.port %>
  username: <%= properties.mysql_node.admin_username %>
  password: <%= properties.mysql_node.admin_password %>
